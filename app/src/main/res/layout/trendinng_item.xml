<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Number Text -->
    <TextView
        android:id="@+id/numberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <!-- Divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <!-- Trending Icon -->
    <ImageView
        android:id="@+id/trendingIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_trending_up_24" />

    <!-- Trending Hashtag and Count Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp">

        <!-- Trending Hashtag -->
        <TextView
            android:id="@+id/trendingHashtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#trending_hashtag"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Trending Count -->
        <TextView
            android:id="@+id/trendingCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10k Tweets"
            android:textSize="14sp"
            android:textColor="@color/black" />

    </LinearLayout>

</LinearLayout>


